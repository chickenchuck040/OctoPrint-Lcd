#: kivy 1.9.2

#:import datetime datetime

<TimeLabel@BoxLayout>:
    time: "00:00:00"
    title: "No Time"

    spacing: 2
    orientation: 'vertical'


    Label:
        text: root.title
        font_size: 24
        size_hint: 1, None
        text_size: self.width, None
        size: self.texture_size[0], self.texture_size[1]
        halign: 'center'

    Label:
        text: root.time
        font_size: 36
        size_hint: 1, None
        text_size: self.width, None
        size: self.texture_size[0], self.texture_size[1]
        halign: 'center'

<TemperatureLabel>:
    actual: "--"
    target: "--"
    title: ""
    name: ""

    spacing: 2
    padding: 5

    Label:
        text: root.title
        font_size: 24
        size_hint: 0.3, 1
        text_size: self.width, self.texture_size[1]
        size: self.texture_size[0], self.texture_size[1]
        halign: 'right'

    Label:
        text: root.actual + " " + unichr(176) + "C"
        font_size: 24
        size_hint: 0.35, 1
        text_size: self.width, None
        size: self.texture_size[0], self.texture_size[1]
        halign: 'right'

    Label:
        text: root.target + " " + unichr(176) + "C"
        font_size: 24
        size_hint: 0.35, 1
        text_size: self.width, None
        size: self.texture_size[0], self.texture_size[1]
        halign: 'right'
    Label:
        size_hint: 0.1, 1

<FilamentLabel>:
    length: " - - "
    volume: " - - "
    title: ""

    spacing: 2
    padding: 5

    Label:
        text: root.title
        font_size: 24
        size_hint: 0.4, 1
        text_size: self.width, None
        size: self.texture_size[0], self.texture_size[1]
        halign: 'right'

    Label:
        text: root.length + "m"
        font_size: 24
        size_hint: 0.25, 1
        text_size: self.width, None
        size: self.texture_size[0], self.texture_size[1]
        halign: 'right'
    Label:
        text: root.volume + "cm" + unichr(179)
        font_size: 24
        size_hint: 0.35, 1
        text_size: self.width, None
        size: self.texture_size[0], self.texture_size[1]
        halign: 'right'
    Label:
        size_hint: 0, 1

<StatusTab>:
    conf: None
    tempBox: tempBox
    filaBox: filaBox
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: status_label
            text: "Printing"
            halign: 'center'
            font_size: 48
            text_size: root.width, 60
            size: self.texture_size
            size_hint: 1, None
        Label:
            id: file_label
            text: "Everything.gcode"
            halign: 'center'
            font_size: 24
            text_size: root.width, 40
            size: self.texture_size
            size_hint: 1, None
        BoxLayout:
            padding: 10
            BoxLayout:
                id: tempBox
                orientation: 'vertical'

            BoxLayout:
                id: filaBox
                orientation: 'vertical'

        BoxLayout:
            #orientation: 'vertical'
            size: self.width, 70
            size_hint: 1, None
            TimeLabel:
                id: time_in
                time: "12:34:54"
                title: "Printed"
            TimeLabel:
                id: time_remaining
                time: "10:47:32"
                title: "Remaining"
            TimeLabel:
                id: time_total
                time: "22:21:12"
                title: "Total"
        ProgressBar:
            id: progress
            max: 100
            value: 56
            padding: 5
            size: self.width, 30
            size_hint: 1, None
        BoxLayout:
            size_hint: 1, None
            size: self.width, 40
            size_hint: 1, None
            size: self.width, 40
            Button:
                text: "Print"
                id: print_button
                on_press: root.conf.plugin._printer.start_print()
            Button:
                text: "Pause"
                id: pause_button
                on_press: root.conf.plugin._printer.toggle_pause_print()
            Button:
                text: "Cancel"
                id: cancel_button
                on_press: root.conf.plugin._printer.cancel_print()
                background_color: 2, .5, .5, 1

<StatusBox>:
    orientation: 'vertical'
    size_hint: 0.2, 0.09
    pos_hint: {'x': 0.8, 'y': 0.905}
    Label:
        id: status
    Label:
        id: file

<FileView>:
    title: ""
    date: 0.0

    orientation: 'vertical'
    padding: 5, 10

    canvas.before:
        Color:
            rgba: 0.4, 0.4, 0.4, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Line:
            points: self.pos[0]+15, self.pos[1], self.pos[0]+self.width-15, self.pos[1]

    Label:
        text: root.title
        font_size: 24
        size_hint: 1, 0.6
        text_size: self.width, None
        size: self.texture_size[0], self.texture_size[1]
        halign: 'center'
    BoxLayout:
        Label:
            text: datetime.datetime.fromtimestamp(root.date).strftime('%a, %b %-d, %Y')
            font_size: 16
            size_hint: 1, 0.4
            text_size: self.width, None
            size: self.texture_size[0], self.texture_size[1]
            halign: 'left'
        Label:
            text: datetime.datetime.fromtimestamp(root.date).strftime('%-I:%M:%S%p')
            font_size: 16
            size_hint: 1, 0.4
            text_size: self.width, None
            size: self.texture_size[0], self.texture_size[1]
            halign: 'right'

<FilesTab>:
    conf: None
    title: "No File"
    date: 0.0
    filaBox: filaBox
    etime: etime

    BoxLayout:
        size_hint_x: 0.55
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: root.title
                font_size: 36
                size_hint: 1, None
                text_size: self.width, None
                size: self.texture_size[0], self.texture_size[1]
                halign: 'center'
                padding: 0, 15

            BoxLayout:
                size_hint_y: 0.2
                padding: 10
                Label:
                    text: "" if root.date == 0 else datetime.datetime.fromtimestamp(root.date).strftime('%a, %b %-d, %Y')
                    font_size: 24
                    size_hint: 0.6, 1
                    text_size: self.width, None
                    size: self.texture_size[0], self.texture_size[1]
                    halign: 'left'
                Label:
                    text: "" if root.date == 0 else datetime.datetime.fromtimestamp(root.date).strftime('%-I:%M:%S%p')
                    font_size: 24
                    size_hint: 0.4, 1
                    text_size: self.width, None
                    size: self.texture_size[0], self.texture_size[1]
                    halign: 'right'

            BoxLayout:
                size_hint_y: 0.4
                padding: 10
                TimeLabel:
                    id: etime
                    size_hint_y: 0.4
                    time: "-- : -- : --"
                    title: 'Estimated'

            BoxLayout:
                size_hint_y: 0.05

            BoxLayout:
                id: filaBox
                size_hint_y: 0.5
                orientation: 'vertical'

            BoxLayout:
                size_hint_y: 0.25

            BoxLayout:
                size_hint: 1, None
                size: self.width, 40
                size_hint: 1, None
                size: self.width, 40
                Button:
                    text: "Print"
                    id: print_button
                    on_press: root.conf.plugin._printer.select_file(root.conf.plugin._file_manager.path_on_disk('local', root.title), False, printAfterSelect=True)
                Button:
                    text: "Load"
                    id: load_button
                    on_press: root.conf.plugin._printer.select_file(root.conf.plugin._file_manager.path_on_disk('local', root.title), False)
                Button:
                    text: "Delete"
                    id: delete_button
                    on_press: root.conf.plugin._file_manager.remove_file('local', root.title)
                    background_color: 2, .5, .5, 1

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.45
        Label:
            text: "Files:"
            font_size: 36
            size_hint: 1, None
            text_size: self.width, None
            size: self.texture_size[0], self.texture_size[1]
            halign: 'center'
            padding: 0, 15
        ScrollView:
            size: self.size
            GridLayout:
                id: file_list
                size_hint_y: None
                cols: 1
                spacing: 0, 0
                padding: 0, 0

<UsbTab>:
    conf: None
    title: "No File"
    date: 0.0
    dpath: ""
    back: back

    BoxLayout:
        BoxLayout:
            size_hint_x: 0.55
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: root.title
                    font_size: 36
                    size_hint: 1, None
                    text_size: self.width, None
                    size: self.texture_size[0], self.texture_size[1]
                    halign: 'center'
                    padding: 0, 15

                BoxLayout:
                    size_hint_y: 0.2
                    padding: 10
                    Label:
                        text: "" if root.date == 0 else datetime.datetime.fromtimestamp(root.date).strftime('%a, %b %-d, %Y')
                        font_size: 24
                        size_hint: 0.6, 1
                        text_size: self.width, None
                        size: self.texture_size[0], self.texture_size[1]
                        halign: 'left'
                    Label:
                        text: "" if root.date == 0 else datetime.datetime.fromtimestamp(root.date).strftime('%-I:%M:%S%p')
                        font_size: 24
                        size_hint: 0.4, 1
                        text_size: self.width, None
                        size: self.texture_size[0], self.texture_size[1]
                        halign: 'right'

                BoxLayout:
                    size_hint_y: 0.25

                BoxLayout:
                    size_hint: 1, None
                    size: self.width, 40
                    size_hint: 1, None
                    size: self.width, 40
                    BoxLayout:

                    Button:
                        text: "Copy"
                        id: copy_button
                        on_press: root.add()
                    BoxLayout:

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.45
            Label:
                size_hint_y: 0.15
                text: "Files:"
                font_size: 36
                size_hint: 1, None
                text_size: self.width, None
                size: self.texture_size[0], 50
                halign: 'center'
            BoxLayout:
                size_hint_y: None
                height: 40
                Label:
                    text: root.dpath
                    font_size: 16
                    size_hint: 0.7, None
                    text_size: self.width, None
                    size: self.texture_size[0], 20
                    halign: 'left'
                Button:
                    id: back
                    text: "Back"
                    size_hint_x: 0.3
                    on_press: root.goback()

            ScrollView:
                size_hint_y: 1
                size: self.size
                GridLayout:
                    id: file_list
                    size_hint_y: None
                    cols: 1
                    spacing: 0, 0
                    padding: 0, 0


