<TempKeypad>:
    conf: None
    title: ""
    temp: ""
    tempIn: tempIn

    orientation: 'vertical'
    size_hint_x: 0.375
    pos_hint: {'x': 0.625}
    spacing: 30

    canvas.before:
        Color:
            rgb: 0, 0, 0
        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1
            width: 5
        Color:
            rgb: 0.3, 0.3, 0.3
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: root.title
        font_size: 36
        size_hint: 1, 0.15
        text_size: self.width, None
        size: self.texture_size[0], self.texture_size[1]
        halign: 'center'
        padding: 0, 15

    Label:
        id: tempIn
        text: root.temp
        font_size: 36
        size_hint: 1, 0.15
        text_size: self.width, None
        size: self.texture_size[0], self.texture_size[1]
        halign: 'right'
        color: 0, 0, 0, 1

        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

    GridLayout:
        id: keypad
        rows: 4
        cols: 3
        size_hint_y: 0.6
        Button:
            text: "7"
            on_press: tempIn.text = tempIn.text + '7'
        Button:
            text: "8"
            on_press: tempIn.text = tempIn.text + '8'
        Button:
            text: "9"
            on_press: tempIn.text = tempIn.text + '9'

        Button:
            text: "4"
            on_press: tempIn.text = tempIn.text + '4'
        Button:
            text: "5"
            on_press: tempIn.text = tempIn.text + '5'
        Button:
            text: "6"
            on_press: tempIn.text = tempIn.text + '6'

        Button:
            text: "1"
            on_press: tempIn.text = tempIn.text + '1'
        Button:
            text: "2"
            on_press: tempIn.text = tempIn.text + '2'
        Button:
            text: "3"
            on_press: tempIn.text = tempIn.text + '3'

        Button:
            text: "Back"
            on_press: tempIn.text = tempIn.text[:-1]
        Button:
            text: "0"
            on_press: tempIn.text = tempIn.text + '0'
        Button:
            text: "Done"
            on_release: root.remove()

<ControlTab>:
    conf: None
    tempBox: tempBox
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                id: tempBox
                orientation: 'vertical'
                padding: 5
                spacing: 5
                size_hint_y: 0.4

            BoxLayout:
                size_hint_y: 0.05

            BoxLayout:
                size_hint_y: 0.1

                Label:
                    text: "Tool:"
                    font_size: 24
                    size_hint: 0.3, None
                    text_size: self.width, None
                    size: self.texture_size[0], self.texture_size[1]
                    halign: 'center'
                    padding: 0, 15

                BoxLayout:
                    spacing: 2
                    padding: 5
                    size_hintxy: 0.7
                    Button:
                        text: "Tool 0"
                        on_press: root.conf.plugin._printer.change_tool('tool0')
                    Button:
                        text: "Tool 1"
                        on_press: root.conf.plugin._printer.change_tool('tool1')
                    Button:
                        text: "Tool 2"
                        on_press: root.conf.plugin._printer.change_tool('tool2')

            BoxLayout:
                size_hint_y: 0.05

            BoxLayout:
                size_hint_y: 0.2
                orientation: 'vertical'
                BoxLayout:
                    spacing: 2
                    padding: 5
                    ToggleButton:
                        id: e_5
                        text: "5"
                        group: "estep"
                        allow_no_selection: False
                        state: 'down'
                    ToggleButton:
                        id: e_10
                        text: "10"
                        group: "estep"
                        allow_no_selection: False
                    ToggleButton:
                        id: e_50
                        text: "50"
                        group: "estep"
                        allow_no_selection: False
                    ToggleButton:
                        id: e_100
                        text: "100"
                        group: "estep"
                        allow_no_selection: False

                BoxLayout:
                    spacing: 2
                    padding: 5, 0
                    Button:
                        id: e_plus
                        text: "Extrude"
                        on_press: root.jog('e', 1)
                    Button:
                        id: e_minus
                        text: "Retract"
                        on_press: root.jog('e', -1)

            BoxLayout:
                size_hint_y: 0.05

            BoxLayout:
                size_hint_y: 0.1
                spacing: 2
                padding: 5, 0
                Button:
                    text: "Motors On"
                    on_press: root.conf.plugin._printer.commands("M17")
                Button:
                    text: "Motors Off"
                    on_press: root.conf.plugin._printer.commands("M18")

            BoxLayout:
                size_hint_y: 0.05

        GridLayout:
            cols: 2
            rows: 2

            BoxLayout:
                orientation: 'vertical'

                size_hint_x: None
                width: 40

                ToggleButton:
                    id: z_100
                    text: "100"
                    group: "zstep"
                    allow_no_selection: False
                ToggleButton:
                    id: z_10
                    text: "10"
                    group: "zstep"
                    allow_no_selection: False
                    state: 'down'
                ToggleButton:
                    id: z_1
                    text: "1"
                    group: "zstep"
                    allow_no_selection: False
                ToggleButton:
                    id: z_0.1
                    text: "0.1"
                    group: "zstep"
                    allow_no_selection: False

            GridLayout:
                cols: 3
                rows: 3
                spacing: 10
                Button:
                    id: z_home
                    text: "Z Home"
                    on_press: root.conf.plugin._printer.home(['z'])
                Button:
                    id: y_plus
                    text: "Y+"
                    on_press: root.jog('y', 1)
                Button:
                    id: z_up
                    text: "Z+"
                    on_press: root.jog('z', 1)

                Button:
                    id: x_minus
                    text: "X-"
                    on_press: root.jog('x', -1)
                Button:
                    id: xy_home
                    text: "Home XY"
                    on_press: root.conf.plugin._printer.home(['x', 'y'])
                Button:
                    id: x_plus
                    text: "X+"
                    on_press: root.jog('x', 1)

                Button:
                    id: home
                    text: "Home All"
                    on_press: root.conf.plugin._printer.home(['x', 'y', 'z'])
                Button:
                    id: y_minus
                    text: "Y-"
                    on_press: root.jog('y', -1)
                Button:
                    id: z_down
                    text: "Z-"
                    on_press: root.jog('z', -1)

            BoxLayout:
                size_hint_x: None
                width: 40
                size_hint_y: None
                height: 40

            BoxLayout:
                size_hint_y: None
                height: 40
                ToggleButton:
                    id: xy_0.1
                    text: "0.1"
                    group: "xystep"
                    allow_no_selection: False
                ToggleButton:
                    id: xy_1
                    text: "1"
                    group: "xystep"
                    allow_no_selection: False
                ToggleButton:
                    id: xy_10
                    text: "10"
                    group: "xystep"
                    allow_no_selection: False
                    state: 'down'
                ToggleButton:
                    id: xy_100
                    text: "100"
                    group: "xystep"
                    allow_no_selection: False

<OctoprintLcd>:
    conf: None

    TabbedPanel:
        id: tabbedpanel
        pos_hint: {'center_x': .5, 'center_y': .5}
        do_default_tab: False

        TabbedPanelItem:
            text: 'Status'
            StatusTab:
                id: status_tab
                conf: root.conf

        TabbedPanelItem:
            text: 'Control'
            ControlTab:
                id: control_tab
                conf: root.conf

        TabbedPanelItem:
            text: 'Printer'
            PrinterTab:
                id: printer_tab
                conf: root.conf

        TabbedPanelItem:
            text: 'Files'
            FilesTab:
                id: files_tab
                conf: root.conf

    StatusBox:
        id: status_box
